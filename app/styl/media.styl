@import "vars.styl"

@media (max-width 992px)
    .hidden-md
        display none !important

    .navigation
        border-bottom: none

    .navigation__container
        max-width 100% !important

    .navigation-list
        display none
        position absolute
        top 0
        left 0
        width 100%
        background-color rgba(purple-color, .8)
        border-radius 3px

    .navigation-list__item
        &:not(:last-child)
            margin-right 0

    .navigation-list__link
        padding-left 10%
        padding-right 10%
        color #ffffff
        &:hover
            background-color lighten(purple-color, 30%)

    .responsive-menu
        display block

    .about
        text-align center
        padding-top 100px
        padding-bottom 100px

    .about__title
        margin-bottom 30px

    .about__right
        &::before
            left 50%
            transform: translateX(-50%)

    .about__container
        flex-direction column

    .about__left
        margin-right 0

    .services-list
        flex-wrap wrap

    .services-list__item
        width calc(50% - 30px)
        justify-content center
        text-align center

@media (max-width 768px)
    .visible-sm
        display block !important

    .title
        font-size 36px

    .dignities
        display none

    .about__right
        &::before
            top calc(50% - 40px)
            left 50%
            transform: translate(-50%, -50%)

    .services-list
        margin-left 0
        margin-right 0

    .services-list__item
        width 100%
        margin-left 0
        margin-right 0

@media (max-width 576px)
    .title
        font-size 30px

    .header__text
        margin-bottom 0
        p
            font-size 20px

    .services
        padding-top 50px
        padding-bottom 50px

    .features
        padding-top 75px
        padding-bottom 75px

@media (max-width 480px)
    .about__right
        &::before
            font-size 270px

    .about
        padding-top 50px
        padding-bottom 50px

    .about__title
        margin-bottom 15px

    .about__text, .features__text
        p
            font-size 17px

    .features__title
        font-size 40px
    

// Container width points
