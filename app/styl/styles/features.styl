.features
    padding-top 120px
    padding-bottom 160px
    text-align center
    color #ffffff
    &::before
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-color rgba(purple-color, .67)

.features__title
    font-size 50px
    font-family exo-font
    letter-spacing 2.5px
    text-transform uppercase
    margin-bottom 50px

.features__text
    max-width 1045px
    margin-left: auto
    margin: auto
    p
        font-size 24px
        font-family Helvetica
        letter-spacing 1.2px
        