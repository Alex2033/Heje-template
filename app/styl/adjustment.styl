// adjusment syles

*
	box-sizing border-box
	&:focus
		outline: 1px solid accent

html, body
	width 100%
	height 100%

body
	min-width 320px
	font-size 15px
	line-height 1.5
	-webkit-font-smoothing antialiased
	background-color white
	color #000000
	font-family main-font
	font-weight 400
	letter-spacing 0.9px

header, section
	background-repeat no-repeat
	background-size cover
	background-position center
	position relative

ul
	padding 0
	margin 0

li 
	list-style none

p
	margin 0

.wrapper 
	min-height 100%
	overflow hidden
	position relative
	width 100%

.container 
	position relative
	z-index 1
	margin 0 auto
	padding-left 10px
	padding-right 10px

img 
	display block
	max-width 100%
	max-height 100%

h1, h2, h3, h4, h5, h6
	margin-top 0
	margin-bottom 0
	font-weight normal

.button
	display inline-block
	border none
	color #fff
	text-decoration none
	background-color $accent
	padding-left 32px
	padding-right 32px
	line-height 55px
	font-size 13px
	text-transform uppercase
	font-weight 600
	text-align center
	position relative
	outline none
	transition background-color .1s ease
	cursor pointer

.title
	font-size 48px
	letter-spacing 2.4px
	text-transform uppercase
	margin-bottom 30px
	font-family josefin-font
	font-weight 700
	

.main-text
	font-size 24px
	letter-spacing 1.2px

.responsive-menu
	display none
	position relative
	top 0
	left 0
	width 100%
	height 50px
	line-height 50px
	background-color darken(accent, 10%)
	cursor pointer
	text-align center
	cursor pointer
	border: 0
	font-family exo-font
	font-weight 700
	font-size 20px
	letter-spacing 2px
	color lighten(#000, 10%)
	transition: background-color .2s ease, color .2s ease
	&:hover
		background-color accent
		color darken(#000, 20%)
	&:focus
		background-color darken(accent, 30%)